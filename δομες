//
struct {             // Δήλωση
int myNum;         // Μέλος (int variable)
string myString;   // Μέλος (string variable)
} myStructure;       // Μεταβλητή


// 

struct {
  int myNum;
  string myString;
} myStruct1, myStruct2, myStruct3; // Πολλαπλές μεταβλητές


//
int main(){
struct {
string brand;
string model;
int year;
} myCar1, myCar2; // Πολλαπλές μεταβλητές
// Πρώτο structmyCar1.brand = "BMW";
myCar1.model = "X5";

myCar1.year = 1999;
// Δεύτερο struct
myCar2.brand = "Ford";
myCar2.model = "Mustang";
myCar2.year = 1969; // Τύπωση
cout << myCar1.brand << " " << myCar1.model << " " << myCar1.year << "\n";
cout << myCar2.brand << " " << myCar2.model << " " << myCar2.year << "\n";
return 0;
}



//
// Πρόσβαση στα μέλη της δομής
struct {
  int myNum;
  string myString;
  } myStructure; 
// Εκχώριση τιμών
myStructure.myNum = 1;
myStructure.myString = "Hello World!";
// Τύπωση
cout << myStructure.myNum << "\n";
cout << myStructure.myString << "\n";
